@model QuanLycyphergame.Models.TaiKhoan

@{
    ViewBag.Title = "Chi tiết tài khoản";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">

    <!-- Main content -->
    <section class="content my-2">

        <!-- Default box -->
        <div class="card">
            <div class="card-header">
                <div class="row">
                    <div class="col-md-6">
                        <strong class="text-danger">CHI TIẾT TÀI KHOẢN</strong>
                    </div>
                    <div class="col-md-6 text-right">
                        <a href="@Url.Action("Edit", "TaiKhoans", new { id = Model.ID_KhachHang })" class="btn-sm btn-success"> <i class="fa fa-edit"> Sửa</i></a>
                        <a href="@Url.Action("Index", "TaiKhoans")" class="btn-sm btn-info"> <i class="fa fa-long-arrow-alt-left"></i> Quay lại</a>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <table class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.ID_KhachHang)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.TenKhachHang)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.SDT)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.GioiTinh)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.ThoiGianGiaNhap)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.LoaiKhachHang)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.TenDN)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Matkhau)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.GiaMay)
                            </th>
                        </tr>
                    </thead>

                    <tbody>
                        <tr>
                            <td>
                                @Html.DisplayFor(model => model.ID_KhachHang)
                            </td>
                            <td>
                                @Html.DisplayFor(model => model.TenKhachHang)
                            </td>
                            <td>
                                @Html.DisplayFor(model => model.SDT)
                            </td>
                            <td>
                                @{
                                    if (Model.GioiTinh.HasValue)
                                    {
                                        if (Model.GioiTinh.Value)
                                        {
                                            <span>Nam</span>
                                        }
                                        else
                                        {
                                            <span>Nữ</span>
                                        }
                                    }
                                }
                            </td>
                            <td>
                                @Html.DisplayFor(model => model.ThoiGianGiaNhap)
                            </td>
                            <td>
                                @Html.DisplayFor(model => model.LoaiKhachHang)
                            </td>
                            <td>
                                @Html.DisplayFor(model => model.TenDN)
                            </td>
                            <td>
                                @Html.DisplayFor(model => model.Matkhau)
                            </td>
                            <td>
                                @Html.DisplayFor(model => model.GiaMay)
                            </td>
                        </tr>
                    </tbody>
                </table>
                <!-- /.card-body -->
            </div>
        </div>
        <!-- /.card -->
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->