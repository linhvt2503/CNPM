@model IEnumerable<QuanLycyphergame.Models.HoaDon>

@{
    ViewBag.Title = "Hóa Đơn";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

@section header{
    <link href="~/Public/css/jquery.dataTables.min.css" rel="stylesheet" />
}
@section footer{
    <script src="~/Public/js/jquery.dataTables.min.js"></script>
    <script>let table = new DataTable('#myTable');</script>
}
<div class="wrapper">
    <!-- Main Sidebar Container -->
    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
        <!-- Main content -->
        <section class="content">

            <!-- Default box -->
            <div class="card">
                <div class="card-header">
                    <div class="row">
                        <div class="col-md-6">
                            <strong class="text-danger"> Hóa Đơn</strong>
                        </div>
                        <div class="col-md-6 text-right">
                            <a href="@Url.Action("Create", "HoaDons")" class="btn-sm btn-success"><i class="fa fa-plus"> Tạo hóa đơn</i></a>


                        </div>
                    </div>
                </div>
                <div class="card-body">

                    <table class="table table-bordered  table-striped" id="myTable">
                        <thead>
                            <tr>
                                <th>@Html.DisplayNameFor(model => model.ID_HoaDon)</th>
                                <th>@Html.DisplayNameFor(model => model.ID_May)</th>
                                <th>@Html.DisplayNameFor(model => model.ID_TTDV)</th>
                                <th>@Html.DisplayNameFor(model => model.ThoiGianMo)</th>
                                <th>@Html.DisplayNameFor(model => model.ThoiGianTat)</th>
                                <th>@Html.DisplayNameFor(model => model.TongTien)</th>
                                <th>@Html.DisplayNameFor(model => model.TinhTrangHD)</th>
                                <th>@Html.DisplayNameFor(model => model.ID_KhachHang)</th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.ID_HoaDon)</td>
                                <td>@Html.DisplayFor(modelItem => item.ID_May)</td>
                                <td>@Html.DisplayFor(modelItem => item.ID_TTDV)</td>
                                <td>@Html.DisplayFor(modelItem => item.ThoiGianMo)</td>
                                <td>@Html.DisplayFor(modelItem => item.ThoiGianTat)</td>
                                <td>@Html.DisplayFor(modelItem => item.TongTien)</td>
                                <td>@Html.DisplayFor(modelItem => item.TinhTrangHD)</td>
                                <td>@Html.DisplayFor(modelItem => item.ID_KhachHang)</td>
                                <td>
                                    <a href="@Url.Action("Edit", "HoaDons", new { id = item.ID_HoaDon })" class="btn-sm btn-primary"><i class="fa fa-edit"></i></a>
                                    <a href="@Url.Action("Details", "HoaDons", new { id = item.ID_HoaDon })" class="btn-sm btn-info"><i class="fa fa-eye"></i></a>
                                    <a href="@Url.Action("Delete", "HoaDons", new { id = item.ID_HoaDon })" class="btn-sm btn-danger"><i class="fa fa-trash"></i></a>
                                </td>
                            </tr>
                            }
                        </tbody>


                    </table>

                </div> <!-- /.card-footer-->
            </div><!-- /.card -->
        </section><!-- /.content -->
    </div> <!-- /.content-wrapper -->
</div><!-- ./wrapper -->