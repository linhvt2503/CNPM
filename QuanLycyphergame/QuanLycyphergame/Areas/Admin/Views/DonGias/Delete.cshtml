@model QuanLycyphergame.Models.DonGia

@{
    ViewBag.Title = "Xóa đơn giá";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="content-wrapper">

    <!-- Main content -->
    <section class="content my-2">

        <!-- Default box -->
        <div class="card">
            <div class="card-header">
                <div class="row">
                    <div class="col-md-6">
                        <strong class="text-danger">XÁC NHẬN XÓA</strong>
                    </div>
                    <div class="col-md-6 text-right">
                        <a href="@Url.Action("Index","DonGias")" class="btn-sm btn-info"> <i class="fa fa-long-arrow-alt-left"></i> Quay lại</a>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <table class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.ID_gia)
                            </th>
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.GiaMay)
                            </th>
                        </tr>
                    </thead>

                    <tbody>
                        <tr>
                            <td>
                                @Html.DisplayFor(model => model.ID_gia)
                            </td>
                            <td>
                                @if (Model.ID_gia != null)
                                {
                                    if (Model.ID_gia.ToString() == "VIP")
                                    {
                                        <span>VIP</span>
                                    }
                                    else
                                    {
                                        <span>Thường</span>
                                    }
                                }
                            </td>
                            <td>
                                @Html.DisplayFor(model => model.GiaMay)
                            </td>
                            <td>
                                @using (Html.BeginForm())
                                {
                                    @Html.AntiForgeryToken()

                                    <div class="form-actions no-color">
                                        <button class="btn-sm btn-danger" type="submit" name="delete">Xóa <i class="fa fa-trash"></i></button>
                                    </div>
                                }
                        </tr>
                    </tbody>
                </table>
                <!-- /.card-body -->
            </div>
        </div>
        <!-- /.card -->
    </section>
    <!-- /.content -->
</div>
