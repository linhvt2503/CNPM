@model QuanLycyphergame.Models.DonGia

@{
    ViewBag.Title = "Chi tiết đơn giá";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">

    <!-- Main content -->
    <section class="content my-2">

        <!-- Default box -->
        <div class="card">
            <div class="card-header">
                <div class="row">
                    <div class="col-md-6">
                        <strong class="text-danger">CHI TIẾT ĐƠN GIÁ</strong>
                    </div>
                    <div class="col-md-6 text-right">
                        <a href="@Url.Action("Edit", "DonGias", new { id = Model.ID_gia })" class="btn-sm btn-success"> <i class="fa fa-edit"> Sửa</i></a>
                        <a href="@Url.Action("Index", "DonGias")" class="btn-sm btn-info"> <i class="fa fa-long-arrow-alt-left"></i> Quay lại</a>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <table class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.ID_gia)
                            </th> 
                            <th>
                                @Html.DisplayNameFor(model => model.GiaMay)
                            </th>
                        </tr>
                    </thead>

                    <tbody>
                        <tr>
                            <td>
                                @Html.DisplayFor(model => model.ID_gia)
                            </td>
                            <td>
                                @if (Model.ID_gia != null)
                                {
                                    if (Model.ID_gia.ToString() == "VIP")
                                    {
                                        <span>VIP</span>
                                    }
                                    else
                                    {
                                        <span>Thường</span>
                                    }
                                }
                            </td>
                            <td>
                                @Html.DisplayFor(model => model.GiaMay)
                            </td>
                        </tr>
                    </tbody>
                </table>
                <!-- /.card-body -->
            </div>
        </div>
        <!-- /.card -->
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->